{
  "name": "electron-authenticator",
  "version": "1.0.0",
  "description": "A secure two-factor authentication (2FA) app built with Electron and React",
  "main": "native/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "cross-env NODE_ENV=development electron native/main.js",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "otplib": "^12.0.1"
  },
  "devDependencies": {
    "@types/node": "^24.7.0",
    "cross-env": "^10.1.0",
    "electron": "^38.2.1",
    "electron-builder": "^26.0.12",
    "typescript": "^4.9.5"
  },
  "build": {
    "appId": "com.electron.authenticator",
    "productName": "Authenticator",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "files": [
      "native/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/android-chrome-512x512.png",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/android-chrome-512x512.png"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/android-chrome-512x512.png"
    },
    "publish": {
      "provider": "github",
      "owner": "your-github-username",
      "repo": "electron-authenticator"
    },
    "extends": null
  }
}
